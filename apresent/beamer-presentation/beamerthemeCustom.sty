\ProvidesPackage{beamerthemeCustom}

\usepackage{graphicx}
\usepackage{color}

% Define custom colors
\definecolor{myblue}{RGB}{0, 102, 204}
\definecolor{mygray}{RGB}{128, 128, 128}

% Set the theme
\mode<presentation>
{
  \setbeamercolor{item}{fg=myblue}
  \setbeamercolor{item projected}{fg=white, bg=myblue}
  \setbeamercolor{section in toc}{fg=myblue}
  \setbeamercolor{alerted text}{fg=red}
  \setbeamercolor{block title}{fg=white, bg=myblue}
  \setbeamercolor{block body}{fg=black, bg=white}
}

% Define custom font sizes
\renewcommand{\footnotesize}{\fontsize{8pt}{10pt}\selectfont}
\renewcommand{\small}{\fontsize{9pt}{11pt}\selectfont}
\renewcommand{\large}{\fontsize{12pt}{14pt}\selectfont}

% Custom title page
\newcommand{\customtitlepage}[2]{
  \begin{titlepage}
    \centering
    \vspace{2cm}
    {\huge \textbf{#1}} \\[1.5cm]
    {\large #2} \\[2cm]
    \includegraphics[width=0.5\textwidth]{images/areas.png} \\[1cm]
    \end{titlepage}
}

\endinput